#define _CRT_SECURE_NO_WARNINGS
#define	ROW 9
#include <stdio.h>
#include <locale.h>
#include <math.h>
void main()
{
	setlocale(LC_CTYPE, "RUS");

	int row, col, COL = 1;
	printf("\n");
	for (row = 1; row <= ROW; ++row)
	{
		for (col = 1; col <= COL; col++)
			{
				printf("%5d", col * row);
			}
		COL += 1;
		printf("\n");
	}

	printf("\n");
	int wor, loc, LOC = 1;
	for (wor = 1; wor <= ROW; ++wor)
	{
		for (loc = 5; loc >= LOC; loc--)
		{
			printf(" 1");
		}
		LOC += 1;
		printf("\n");
	}

	
	char a;
	while (1)
	{
		int ch;
		printf("Введите произвольное число: ");
		scanf("%d", &ch);
		int pra = ch % 10;
		ch /= 10;
		while (ch > 0)
		{
			int nra = ch % 10;
			if (nra == pra)
			{
				printf("Соседние одинаковые цифры : %d\n", nra);
			}
			pra = nra;
			ch /= 10;
		}
		printf("Продолжить? (Да - y, нет - n) : ");
		while (getchar() != '\n');
		if ((a = getchar()) == 'n')
		{
			break;
		}
	}
}
