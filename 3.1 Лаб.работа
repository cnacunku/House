#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>
int main()
{
	int num, num1;
	setlocale(LC_CTYPE, "RUS");
	printf("Введите первое число ");
	scanf("%d", &num);
	printf("Введите второе число ");
	scanf("%d", &num1);
	printf("Сумма : %d\nРазность : %d\nПроизведение : %d\nЧастное : %d\nОстаток от деления : %d", num + num1, num - num1, num * num1, num / num1, num % num1);
	return 0;
}



#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>
#define D 2.54
int main()
{
	int dym;
	float result;
	setlocale(LC_CTYPE, "RUS");
	printf("Введите значение для расчёта :  ");
	scanf("%d", &dym);
	result = D * dym;
	printf("%d дюймов – это %.2f см", dym, result);
	return 0;
}
