#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <locale.h>
int main()
{
	setlocale(LC_CTYPE, "RUS");
	char c = '!';
	int i = 2;
	float f = 3.14f;
	double d = 5e-12;
	

	printf("c = %c, i = %d, f = %g, d = %lg\n" , c, i, f, d);

	printf("Введите число c : ");
	scanf("%c", &c);
	printf("Введите число i : ");
	scanf("%d", &i);
	printf("Введите число f : ");
	scanf("%g", &f);
	printf("Введите число d : \n");
	scanf("%lg", &d);
	int cel; float dc;
	cel = (int)f;
	dc = f - cel;
	printf("Целая часть вещественного числа f = %d, а дробная часть числа f = %f\n", cel, dc);
	printf("Шестнадцатеричный код символа c = %x, а десятиричный код символа c = %i\n", c, c);
	printf("Десятичное число, равное 1/i = %", 1 / i);
}
